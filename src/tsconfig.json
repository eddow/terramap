{
	"compilerOptions": {
		"importHelpers": true,
		"declaration": true,
		"strict": true,
		"sourceMap": true,
		"sourceRoot": ".",
		"outDir": "../dist",
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"es2015",
			"es5",
			"es6"
		],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./**/*.ts"
	]
}